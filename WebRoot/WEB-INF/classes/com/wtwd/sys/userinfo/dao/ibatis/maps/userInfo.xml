	<insert id="insertUserInfo" parameterClass="com.wtwd.sys.userinfo.domain.UserInfo">
		INSERT INTO userinfo(userName,remark,userCode,passWrd,passWrd1,createDate,updateDate,groupCode,tag,code,addUser) VALUES (#userName#,#remark#,#userCode#,#passWrd#,#passWrd1#,#createDate#,#updateDate#,#groupCode#,#tag#,#code#,#addUser#)
	</insert>

	<update id="updateUserInfo" parameterClass="com.wtwd.sys.userinfo.domain.UserInfo">
		UPDATE userinfo 
		<dynamic prepend="SET">
			<isNotEmpty prepend="," property="userName">
		      userName=#userName#
			</isNotEmpty>
			<isNotEmpty prepend="," property="tag">
		      tag=#tag#
			</isNotEmpty>
			<isNotEmpty prepend="," property="passWrd">

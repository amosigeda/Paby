	<select id="getUserInfoCount" resultClass="java.lang.Integer" parameterClass="com.wtwd.sys.userinfo.domain.UserInfo">
		SELECT COUNT(*) FROM userinfo
		<dynamic prepend="where">
			<isNotEmpty prepend="and" property="passWrd">
		      passWrd=#passWrd#
			</isNotEmpty>
			  <isNotEmpty prepend="and" property="tag">
		      tag=#tag#

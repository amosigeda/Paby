package com.wtwd.sys.mediainfo.domain.logic;

import java.util.List;

import com.godoing.rose.lang.DataList;
import com.godoing.rose.lang.DataMap;
import com.godoing.rose.lang.SystemException;
import com.wtwd.sys.mediainfo.dao.MediaInfoDao;
import com.wtwd.sys.mediainfo.domain.MediaInfo;

public class MediaInfoFacadeImpl implements MediaInfoFacade{
		
	private MediaInfoDao mediaInfoDao;

	public void setMediaInfoDao(MediaInfoDao mediaInfoDao) {
		this.mediaInfoDao = mediaInfoDao;
	}
	
	public MediaInfoFacadeImpl(){
		
	}

	public int deleteMediaInfo(MediaInfo vo) throws SystemException {
		// TODO Auto-generated method stub
		return mediaInfoDao.deleteMediaInfo(vo);
	}

	public Integer getMediaInfoCount(MediaInfo vo) throws SystemException {
		// TODO Auto-generated method stub
		return mediaInfoDao.getMediaInfoCount(vo);
	}

	public List<DataMap> getMediaInfoList(MediaInfo vo) throws SystemException {
		// TODO Auto-generated method stub
		return mediaInfoDao.getMediaInfoList(vo);
	}

	public DataList getMediaInfoListByVo(MediaInfo vo) throws SystemException {
		// TODO Auto-generated method stub
		DataList list = new DataList(mediaInfoDao.getMediaInfoListByVo(vo));
		list.setTotalSize(mediaInfoDao.getMediaInfoCount(vo));
		return list;
	}

	public int insertMediaInfo(MediaInfo vo) throws SystemException {
		// TODO Auto-generated method stub
		return mediaInfoDao.insertMediaInfo(vo);
	}

	public int updateMediaInfo(MediaInfo vo) throws SystemException {
		// TODO Auto-generated method stub
		return mediaInfoDao.updateMediaInfo(vo);
	}

}

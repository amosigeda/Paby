import com.wtwd.sys.msginfo.domain.MsgInfo;
import com.wtwd.sys.shareinfo.domain.ShareInfo;

public class DoDeleteShareDeviceAction extends BaseAction{

	Log logger = LogFactory.getLog(DoDeleteShareDeviceAction.class);
	public ActionForward execute(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response)
			throws Exception {
		
		request.setCharacterEncoding("UTF-8");
		String href= request.getServletPath();
		Date start = new Date();
		JSONObject json = new JSONObject();
		ServiceBean instance = ServiceBean.getInstance();
		try{
			ServletInputStream input = request.getInputStream();
			BufferedReader reader = new BufferedReader(new InputStreamReader(input));
			StringBuffer sb = new StringBuffer();
			String online = "";
			while((online = reader.readLine()) != null){
				sb.append(online);
			}
			JSONObject object = JSONObject.fromObject(sb.toString());
			String user_id = object.getString("user_id");          //Ҫȡ�������û�id
			String device_imei = object.getString("device_imei");   //Ҫȡ���ĸ�����
			String to_user_id = object.getString("to_user_id");    //Ҫ��֪˭
			String to_message = object.getString("to_message");         //ȡ�����Ļ���
			String message_level = object.getString("message_level");       //���ȼ�
			String belongProject = object.getString("belong_project");
			
			
			//get����
//			String user_id = request.getParameter("user_id");          //Ҫȡ�������û�id
//			String device_imei = request.getParameter("device_imei");   //Ҫȡ���ĸ�����
//			String to_user_id = request.getParameter("to_user_id");    //Ҫ��֪˭
//			String to_message = request.getParameter("to_message");         //ȡ�����Ļ���
//			String message_level = request.getParameter("message_level");       //���ȼ�
			ShareInfo shareInfo = new ShareInfo();
			MsgInfo msgInfo = new MsgInfo();
			
			shareInfo.setCondition("user_id ='"+to_user_id+"' and to_user_id ='"+user_id+"' and device_imei ='"+device_imei+"' and belong_project='"+belongProject+"'");
			instance.getShareInfoFacade().deleteShareInfo(shareInfo);
			
			to_message = Constant.transCodingToUtf(to_message);
			msgInfo.setFromId(user_id);
			msgInfo.setToId(to_user_id);
			msgInfo.setMsgContent("5@" + device_imei + "@0");
			msgInfo.setMsgHandlerDate(new Date());
			msgInfo.setMsgLevel(message_level);
			msgInfo.setIsHandler("0");
			msgInfo.setBelongProject(belongProject);
			instance.getMsgInfoFacade().insertMsgInfo(msgInfo);
			result = Constant.SUCCESS_CODE;
		//	insertVisit(href,belongProject,user_id,0,start,new Date());
		}catch (Exception e) {
			e.printStackTrace();	
			StringBuffer sb = new StringBuffer();
			Writer writer = new StringWriter();
			PrintWriter printWriter = new PrintWriter(writer);
			Throwable cause = e.getCause();		
			while (cause != null) {
				cause.printStackTrace(printWriter);
				cause = cause.getCause();
			}
			printWriter.close();
			String resultSb = writer.toString();
			sb.append(resultSb);
			
			logger.error(e);
			result = Constant.EXCEPTION_CODE;
			json.put(Constant.EXCEPTION, sb.toString());
		}
		json.put("request", href);
		json.put(Constant.RESULTCODE, result);
		response.setCharacterEncoding("UTF-8");
		response.getWriter().write(json.toString());
		return null;
	}
}
